    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Debug",
            "program": "${fileDirname}/../target/debug/byte-knight.exe",
            "args": [
                "engines"
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "perft (Windows)",
            "program": "${workspaceRoot}/target/debug/perft.exe",
            "args": [
                "--fen",
                "rnbq1k1r/pp1Pbppp/2p5/8/2B5/8/PPP1NnPP/RNBQK2R w KQ - 1 8",
                "-d",
                "2",
                "-s",
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "perft (Linux)",
            "program": "${workspaceRoot}/target/debug/perft",
            "args": [
                "--fen",
                "rnbq1k1r/pp1Pbppp/2p5/8/2B5/8/PPP1NnPP/RNBQK2R w KQ - 1 8",
                "-d",
                "2",
                "-s",
            ],
            "cwd": "${workspaceRoot}",
        }
    ]
}
